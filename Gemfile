source 'https://rubygems.org'

gem 'rails', '4.2.3'

# User Interface
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass', '~> 3.3.5'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

# Database
gem 'sqlite3'
gem 'annotate'

# Shopify
gem 'shopify_app'
gem 'shopify_api'

# Application Server
gem 'puma'
gem 'devise'

# Environment
gem 'figaro'

# Amazon Market Web Services API
gem 'vacuum'
gem 'peddler'

# Scraping
gem 'mechanize'

# Background job runner
gem 'sidekiq'
gem 'redis'
gem 'sinatra', require: false

# Utils
gem 'rest-client'

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :development do
  gem 'pry-rails'
  gem 'better_errors'
end
